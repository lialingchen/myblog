<% provide(:username, @username) %>
<% if params[:name].nil? %>
  <h1>All Posts</h1>
  <% provide(:title, "All Posts") %>
<% else %>
  <h1>My Posts</h1>
  <% provide(:title, "My Posts") %>
<% end %>



<div class="row">
<% @post.each do |post| %>
    <div class="col-md-4">
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <em>---- by 
        <% if user_session.nil? %>
          <%= "********" %> 
          <%= link_to "(Sign in to see)", signin_path %>
        <% else %>
          <%= "#{post.user.email}" %>
        <% end %>
      </em>
    
      <%= link_to 'See comments', post_path(post) %><br>
    </div>
    <% end %>
</div>


